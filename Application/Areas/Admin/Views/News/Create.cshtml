
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <title>Create Job</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/Content/editor/summernote.css" rel="stylesheet" />
    <link href="~/Content/datepicker/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link href="~/Content/select2/select2.min.css" rel="stylesheet" />
    <style>
        #tags {
            width: 100% !important;
        }
    </style>
</head>

<body class="bg-light">

    <div class="container">
        <div class="py-5 text-center">
            <h2>Create News</h2>
            <p class="lead"></p>
        </div>

        <div class="row">
            <div class="col-md-2 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Info</span>
                    <span class="badge badge-secondary badge-pill">3</span>
                </h4>
                <ul class="list-group mb-3">
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">Written by you</h6>
                            <small class="text-muted">Brief description</small>
                        </div>
                        <span class="text-muted">$12</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">Total</h6>
                            <small class="text-muted">Brief description</small>
                        </div>
                        <span class="text-muted">$8</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">Today</h6>
                            <small class="text-muted">Brief description</small>
                        </div>
                        <span class="text-muted">$5</span>
                    </li>
                </ul>
            </div>
            <div class="col-md-10 order-md-1">
                <h4 class="mb-3">Create</h4>
                <form class="needs-validation" method="post" action="/Admin/News/Create" novalidate>
                    <div class="row">
                        <div class="col-md-12 mb-6">
                            <label>Title</label>
                            <input type="text" class="form-control" id="title" name="Title" placeholder="" value="" required>
                            <div class="invalid-feedback">
                                Valid first name is required.
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="description">Description</label>
                        <textarea class="form-control" id="description" name="Description" required></textarea>
                        <div class="invalid-feedback" style="width: 100%;">
                            Your username is required.
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-md-12 mb-6">
                            <label for="tag">Tags</label>
                            <select class="custom-select d-block w-100" id="tags" name="Tags" required>
                                <option value="">Choose...</option>
                                <option value="1">United States</option>
                            </select>
                            <div class="invalid-feedback">
                                Please select a valid country.
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top:10px">

                    </div>
                    <div class="row">
                        
                    </div>
                    <hr class="mb-4">
                    <button class="btn btn-primary btn-lg btn-block" type="submit">Create</button>
                </form>
            </div>
        </div>
        <div id="summernote"></div>
        <footer class="my-5 pt-5 text-muted text-center text-small">
            <p class="mb-1">&copy; 2017-2018 Company Name</p>
            <ul class="list-inline">
                <li class="list-inline-item"><a href="#">Privacy</a></li>
                <li class="list-inline-item"><a href="#">Terms</a></li>
                <li class="list-inline-item"><a href="#">Support</a></li>
            </ul>
        </footer>
    </div>
    <script src="~/Content/js/jquery/jquery-2.2.4.min.js"></script>

    <script src="~/Content/js/popper.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/editor/summernote.js"></script>
    <script src="~/Content/datepicker/bootstrap-datepicker.min.js"></script>
    <script src="~/Content/select2/select2.full.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#description").summernote(
                {
                    height:300
                }
            );
            $('#applyStartDate').datepicker({
                format: 'mm-dd-yyyy',
                startDate: '-15d',
                autoclose: true
            });
            $('#applyStartDate').on('changeDate', function () {
                console.log($(this).attr("id"));
            });
            $('#applyEndDate').datepicker({
                format: 'mm-dd-yyyy',
                startDate: '-15d',
                autoclose: true
            });
            $('#applyEndDate').on('changeDate', function () {
                console.log($(this).attr("id"));
            });
            $('#examDate').datepicker({
                format: 'mm-dd-yyyy',
                startDate: '-15d',
                autoclose: true
            });
            $('#examDate').on('changeDate', function () {
                console.log($(this).attr("id"));
            });
            $("#tags").select2();
        });

    </script>
</body>
</html>
