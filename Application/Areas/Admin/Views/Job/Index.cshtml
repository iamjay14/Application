
@{
    ViewBag.Title = "Index";
    Layout = "~/_Layouts/_Admin.cshtml";
}
@model IEnumerable<Application.Areas.Admin.Models.JobViewModel>
<head>
    <link href="~/Content/editor/summernote.css" rel="stylesheet" />
    <link href="~/Content/datepicker/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link href="~/Content/select2/select2.min.css" rel="stylesheet" />
    <style>
        #tags {
            width: 100% !important;
        }
    </style>
</head>
<div class="card">
    <div class="card-header">
        <div class="inline">
            <h4 class="card-title">Job</h4>
            <p class="card-category">
                Map of the distribution of users around the world
            </p>
        </div>
        <ul class="nav nav-pills float-right" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">List</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Create New</a>
            </li>
        </ul>

    </div>
    <div class="card-body">

        <!-- Tab panes -->
        <div class="tab-content">
            <div class="tab-pane active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Create Date</th>
                            <th>Fees</th>
                            <th>Exam Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var a in Model)
                            {
                                <tr>
                                    <td>@a.Id</td>
                                    <td>@a.Title</td>
                                    <td>@a.Description</td>
                                    <td>@a.CreatedDate</td>
                                    <td>@a.Fees</td>
                                    <td>@a.ExamDate</td>
                                </tr>
                            }
                        }
                        
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Create Date</th>
                            <th>Fees</th>
                            <th>Exam Date</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="tab-pane" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                
                <div class="row">
                    <div class="col-md-2 order-md-2 mb-4">
                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">Info</span>
                            <span class="badge badge-secondary badge-pill">3</span>
                        </h4>
                        <ul class="list-group mb-3">
                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <div>
                                    <h6 class="my-0">Written by you</h6>
                                    <small class="text-muted">Brief description</small>
                                </div>
                                <span class="text-muted">$12</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <div>
                                    <h6 class="my-0">Total</h6>
                                    <small class="text-muted">Brief description</small>
                                </div>
                                <span class="text-muted">$8</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <div>
                                    <h6 class="my-0">Today</h6>
                                    <small class="text-muted">Brief description</small>
                                </div>
                                <span class="text-muted">$5</span>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-10 order-md-1">
                        <h6 class="mb-3">Create</h6>
                        <form class="needs-validation" method="post" action="/Admin/Job/Create" novalidate>
                            <div class="row">
                                <div class="col-md-12 mb-6">
                                    <label>Title</label>
                                    <input type="text" class="form-control" id="title" name="Title" placeholder="" value="" required>
                                    <div class="invalid-feedback">
                                        Valid first name is required.
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="description">Description</label>
                                <textarea class="form-control" id="description" name="Description" required></textarea>
                                <div class="invalid-feedback" style="width: 100%;">
                                    Your username is required.
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-md-12 mb-6">
                                    <label for="tag">Tags</label>
                                    <select class="custom-select d-block w-100" id="tags" name="TagName" multiple="multiple" required>
                                        <option value="">Choose...</option>
                                        <option value="Tag 1">Tag 1</option>
                                        <option value="Tag 2">Tag 2</option>
                                        <option value="Tag 3">Tag 3</option>
                                        <option value="Tag 4">Tag 4</option>
                                    </select>
                                    <div class="invalid-feedback">
                                        Please select a valid country.
                                    </div>
                                </div>
                            </div>
                            <div class="row" style="margin-top:10px">

                            </div>
                            <div class="row">
                                <div class="col-md-3 mb-2">
                                    <label for="state">Apply Start Date</label>
                                    <div class="input-group date">
                                        <input type="text" class="form-control" id="applyStartDate" name="ApplyStartDate">
                                        <div class="input-group-addon">
                                            <span class="glyphicon glyphicon-th"></span>
                                        </div>
                                    </div>
                                    <div class="invalid-feedback">
                                        Please provide a valid state.
                                    </div>
                                </div>
                                <div class="col-md-3 mb-2">
                                    <label for="zip">Apply End Date</label>
                                    <div class="input-group date">
                                        <input type="text" class="form-control" id="applyEndDate" name="ApplyEndDate">
                                        <div class="input-group-addon">
                                            <span class="glyphicon glyphicon-th"></span>
                                        </div>
                                    </div>
                                    <div class="invalid-feedback">
                                        Zip code required.
                                    </div>
                                </div>
                                <div class="col-md-3 mb-2">
                                    <label for="state">Fees</label>
                                    <input type="text" class="form-control" id="fees" name="Fees" placeholder="" required>
                                    <div class="invalid-feedback">
                                        Please provide a valid state.
                                    </div>
                                </div>
                                <div class="col-md-3 mb-2">
                                    <label for="zip">Exam Date</label>
                                    <div class="input-group date">
                                        <input type="text" class="form-control" id="examDate" name="ExamDate">
                                        <div class="input-group-addon">
                                            <span class="glyphicon glyphicon-th"></span>
                                        </div>
                                    </div>
                                    <div class="invalid-feedback">
                                        Zip code required.
                                    </div>
                                </div>
                            </div>
                            <hr class="mb-4">
                            <button class="btn btn-primary btn-lg btn-block" type="submit">Create</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
                
    </div>
</div>
@section Scripts {
    <script src="~/Content/editor/summernote.js"></script>
<script src="~/Content/datepicker/bootstrap-datepicker.min.js"></script>
<script src="~/Content/select2/select2.full.min.js"></script>

<script>
        $(document).ready(function () {
            $("#description").summernote(
                {
                    height:300
                }
            );
            $('#applyStartDate').datepicker({
                format: 'mm-dd-yyyy',
                startDate: '-15d',
                autoclose: true
            });
            $('#applyStartDate').on('changeDate', function () {
                console.log($(this).attr("id"));
            });
            $('#applyEndDate').datepicker({
                format: 'mm-dd-yyyy',
                startDate: '-15d',
                autoclose: true
            });
            $('#applyEndDate').on('changeDate', function () {
                console.log($(this).attr("id"));
            });
            $('#examDate').datepicker({
                format: 'mm-dd-yyyy',
                startDate: '-15d',
                autoclose: true
            });
            $('#examDate').on('changeDate', function () {
                console.log($(this).attr("id"));
            });
            $("#tags").select2();
        });

</script>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
        $('.note-popover').hide();
    });
</script>

}
<!-- Nav tabs -->

