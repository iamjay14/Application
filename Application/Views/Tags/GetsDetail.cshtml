
@{
    ViewBag.Title = "GetsDetail";
    Layout = "~/_Layouts/_SubLayout.cshtml";
}
@model IEnumerable<Application.Areas.Admin.Models.TagsViewModel>

<h5 style="font-weight:500">Tags : @ViewBag.tag</h5>
<div class="post-content-area mb-50">
    <!-- Catagory Area -->
    <div class="world-catagory-area">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="title">Job Alerts</li>


            <li class="nav-item">
                <a class="nav-link" href="/Home/ViewAllJobs" role="button" aria-haspopup="true" aria-expanded="false">View All</a>

            </li>
        </ul>

        <div class="tab-content" id="myTabContent">

            <div class="tab-pane fade show active" id="world-tab-1" role="tabpanel" aria-labelledby="tab1">
                <div class="row">
                    
                    @{
                        var data = Model.Where(x=>x.Type=="Job");
                    }
                    <div class="col-12">

                        @foreach (var a in data)
                        {
                            Random rd = new Random();
                                                <!-- Single Blog Post -->
                            <div class="single-blog-post post-style-2 d-flex align-items-center wow fadeInUpBig @("left-border"+rd.Next(0,6))" data-wow-delay="0.2s">
                                <!-- Post Thumbnail 
                                <div class="post-thumbnail">
                                    <img src="~/Content/img/blog-img/b10.jpg" alt="">
                                </div>
                                <!-- Post Content -->
                                <div class="post-content">
                                    <a href="/JobAlert/JobDetail/@a.TypeId" class="headline">
                                        <h5>@a.Name</h5>
                                    </a>
                                    <!-- Post Meta -->
                                    <div class="post-meta">
                                        <p><a href="#" class="post-author">Katy Liu</a> on <a href="#" class="post-date">Sep 29, 2017 at 9:48 am</a></p>
                                        
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>

            
        </div>

