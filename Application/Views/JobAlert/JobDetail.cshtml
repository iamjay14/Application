@using Application.Areas.Admin.Models
@{
    Layout = "~/_Layouts/_SubLayout.cshtml";
}
@model Application.Areas.Admin.Models.JobViewModel

<div class="post-content-area mb-50">
    @if (Model != null)
    {
                            <!-- Catagory Area -->
        <div class="world-catagory-area">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                
                <li class="title">@Model.Title</li>


                <li class="nav-item">
                    <a class="nav-link" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                        <span class="fa fa-2x fa-bell"></span>
                    </a>

                </li>
            </ul>

            <div class="tab-content" id="myTabContent">

                <div class="tab-pane fade show active" id="world-tab-1" role="tabpanel" aria-labelledby="tab1">
                    <div class="row">

                        <div class="col-12">
                            <!-- Single Blog Post -->
                            @Html.Raw(Model.Description)

                        </div>
                    </div>
                </div>

                <p>
                    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample1" aria-expanded="false" aria-controls="collapseExample">
                        Related Help
                    </button>
                </p>
                
                <div class="collapse" id="collapseExample1">
                    <div class="card card-body">

                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="title">Top Quize</li>


                            <li class="nav-item">
                                <a class="nav-link" href="/Home/ViewAllJobs" role="button" aria-haspopup="true" aria-expanded="false">View All</a>

                            </li>
                        </ul>

                        <div class="tab-content" id="myTabContent2">

                            <div class="tab-pane fade show active" id="world-tab-10" role="tabpanel" aria-labelledby="tab10">
                                <div class="row">
                                    @{
                                        var quizes = QuizeTypeDao.Gets().Take(8);
                                    }

                                    @foreach (var a in quizes.Take(4))
                                    {
                                        <a href="/QuizeInfo/GetQuize/@a.Id">
                                            <div class="col-12 col-md-3">

                                                <!-- Single Blog Post -->
                                                <div class="single-blog-post" data-wow-delay="0.2s">
                                                    <!-- Post Thumbnail -->
                                                    <div class="post-thumbnail">
                                                        <img src="~/Content/img/blog-img/b2.jpg" alt="">
                                                        <!-- Catagory -->
                                                        <div class="post-cta"><a href="#">travel</a></div>
                                                    </div>
                                                    <!-- Post Content -->
                                                    <div class="post-content">
                                                        <p>@a.Name</p>
                                                        <!-- Post Meta -->
                                                        <div class="post-meta">
                                                            <p><a href="#" class="post-author">Katy Liu</a> on <a href="#" class="post-date">Sep 29, 2017 at 9:48 am</a></p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>

                                    }

                                </div>
                            </div>
                        </div>

                        <div class="row"></div>

                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="title">Top Material</li>


                            <li class="nav-item">
                                <a class="nav-link" href="/Home/ViewAllJobs" role="button" aria-haspopup="true" aria-expanded="false">View All</a>

                            </li>
                        </ul>

                        <div class="tab-content" id="myTabContent2">

                            <div class="tab-pane fade show active" id="world-tab-10" role="tabpanel" aria-labelledby="tab10">
                                <div class="row">
                                    
                                    @foreach (var a in quizes.Take(4))
                                    {
                                        <a href="/QuizeInfo/GetQuize/@a.Id">
                                            <div class="col-12 col-md-3">

                                                <!-- Single Blog Post -->
                                                <div class="single-blog-post" data-wow-delay="0.2s">
                                                    <!-- Post Thumbnail -->
                                                    <div class="post-thumbnail">
                                                        <img src="~/Content/img/blog-img/b2.jpg" alt="">
                                                        <!-- Catagory -->
                                                        <div class="post-cta"><a href="#">travel</a></div>
                                                    </div>
                                                    <!-- Post Content -->
                                                    <div class="post-content">
                                                        <p>@a.Name</p>
                                                        <!-- Post Meta -->
                                                        <div class="post-meta">
                                                            <p><a href="#" class="post-author">Katy Liu</a> on <a href="#" class="post-date">Sep 29, 2017 at 9:48 am</a></p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>

                                    }

                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>

    }

</div>